{
  "name": "light-ecs",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Kun Chen",
  "main": "dist/index.js",
  "module": "dist/light-ecs.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/light-ecs.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/light-ecs.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.4",
    "@tsconfig/recommended": "^1.0.1",
    "dts-cli": "^1.1.3",
    "eslint-config-react-app": "^7.0.0",
    "husky": "^7.0.4",
    "size-limit": "^7.0.4",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "protobufjs": "^6.11.2"
  }
}
